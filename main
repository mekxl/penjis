<body>
  <button id="btnCreate">Clique aqui!</button>
  <div id="container"></div>

  <script>
    (() => {
      const btn = document.getElementById('btnCreate');
      const container = document.getElementById('container');

      function getRandomPosition(boxWidth, boxHeight) {
        const contRect = container.getBoundingClientRect();
        // Prevent boxes from going out of container:
        const maxX = contRect.width - boxWidth;
        const maxY = contRect.height - boxHeight;
        const x = Math.random() * maxX;
        const y = Math.random() * maxY;
        return { x, y };
      }

      btn.addEventListener('click', () => {
        const box = document.createElement('div');
        box.className = 'box';
        box.textContent = 'Penis';

        container.appendChild(box);

        // After appending, we can get the box dimensions:
        const boxRect = box.getBoundingClientRect();

        // Get random position within container
        const pos = getRandomPosition(boxRect.width, boxRect.height);

        // Position box inside container relative to it
        // container is relative positioned, so we use offsetLeft.
        box.style.left = pos.x + 'px';
        box.style.top = pos.y + 'px';
      });

      // Optional: On first load, prevent vertical scroll on mobile
      window.addEventListener('resize', () => {
        // Could add functionality to limit container height if needed
      });
    })();
  </script>
</body>
